@model ProductCategoryListViewModel

<h1>Products</h1>
@if (Model.Products != null)
{
    @foreach (var product in Model.Products)
    {
        <h2>Name : @product.Name</h2>
        <h2>Price : $@product.Price</h2>
    }
}

